@page
@model BlogApp.FrontEnd.Pages.Articles.IndexModel
@{
    ViewData["Title"] = "Lista de Artículos";
}

<h2>@ViewData["Title"]</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-page="/Articles/Create" class="btn btn-primary">Crear Nuevo</a>
</div>

@if (!Model.ArticleList.HasItems)
{
    <div class="alert alert-info">No hay artículos disponibles.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Creado el</th>
                <th>Creado por</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model.ArticleList.Items)
            {
                <tr>
                    <td>@article.Id</td>
                    <td>@article.Title</td>
                    <td>@article.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@article.CreatedBy</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-success">Detalles</a>
                        <a href="#" class="btn btn-sm  btn-primary">Editar</a>
                        <a href="#" class="btn btn-sm  btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}